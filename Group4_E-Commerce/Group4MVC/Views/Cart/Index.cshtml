@using GUI_Group4_ECommerce.ViewModels
@model IEnumerable<CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var vi = new System.Globalization.CultureInfo("vi-VN");
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" />
}


<!-- Breadcrumb -->
<div class="breadcrumb-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Home</a></li>
                <li class="breadcrumb-item"><a href="/Product">Products</a></li>
                <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
            </ol>
        </nav>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Your cart is empty.
        </div>
        <a asp-action="Index" asp-controller="Product" class="btn btn-primary">
            ← Continue shopping
        </a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th colspan="2">Product</th>
                        <th class="text-end">Unit&nbsp;Price</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var index = 1;
                        decimal grandTotal = 0;
                    }
                    @foreach (var item in Model)
                    {
                        var subTotal = item.UnitPrice * item.Quantity;
                        grandTotal += (decimal)subTotal;
                        <tr>
                            <td>@index</td>
                            <td style="width:80px;">
                                <img src="@item.Image" alt="@item.ProductName" class="img-thumbnail" style="max-width:60px;" />
                            </td>
                            <td>@item.ProductName</td>

                            <td class="text-end">@item.UnitPrice.ToString("#,##0", vi) VNĐ</td>

                            <td class="text-center">
                                <a asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-delta="-1"
                                   class="btn btn-sm btn-outline-secondary me-1">−</a>
                                @item.Quantity
                                <a asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-delta="1"
                                   class="btn btn-sm btn-outline-secondary ms-1">+</a>
                            </td>

                            <td class="text-end">@subTotal.ToString("#,##0", vi) VNĐ</td>

                            <td class="text-end">
                                <a asp-action="Remove"
                                   asp-controller="Cart"
                                   asp-route-id="@item.ProductId"
                                   class="btn btn-sm btn-outline-danger">
                                    ×
                                </a>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <th colspan="5" class="text-end">Total:</th>
                        <th class="text-end">@grandTotal.ToString("#,##0", vi) VNĐ</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary">
                ← Continue shopping
            </a>

            <a asp-action="Checkout" asp-controller="Cart" class="btn btn-primary">
                Checkout →
            </a>
        </div>
    }

</div>

<!-- Cart Section -->
<div class="cart-section">
    <div class="container">
        <!-- Cart Header -->
        <div class="cart-header">
            <h1 class="page-title">
                <i class="fas fa-shopping-cart"></i>
                Shopping Cart
            </h1>
            @if (Model.Any())
            {
                <p class="cart-count">@Model.Count() items in your cart</p>
            }
        </div>

        @if (!Model.Any())
        {
            <!-- Empty Cart -->
            <div class="empty-cart">
                <div class="empty-cart-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <h3>Your Cart is Empty</h3>
                <p>Looks like you haven't added any items to your cart yet.</p>
                <a href="@Url.Action("Index", "Product")" class="btn-primary">
                    <i class="fas fa-shopping-bag"></i>
                    Start Shopping
                </a>
            </div>
        }
        else
        {
            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="cart-items">
                        <div class="cart-items-header">
                            <h3>Cart Items</h3>
                            <span class="items-count">@Model.Count() items</span>
                        </div>

                        <div class="cart-table-wrapper">
                            <table class="cart-table">
                                <thead>
                                    <tr>
                                        <th class="product-col">Product</th>
                                        <th class="price-col">Price</th>
                                        <th class="quantity-col">Quantity</th>
                                        <th class="total-col">Total</th>
                                        <th class="action-col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        decimal grandTotal = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        var subTotal = item.UnitPrice * item.Quantity;
                                        grandTotal += (decimal)subTotal;

                                        <tr class="cart-item">
                                            <td class="product-info">
                                                <div class="product-details">
                                                    <div class="product-image">
                                                        <img src="@item.Image" alt="@item.ProductName" />
                                                    </div>
                                                    <div class="product-text">
                                                        <h4 class="product-name">@item.ProductName</h4>
                                                        <p class="product-category">Electronics</p>
                                                        <div class="product-rating">
                                                            <div class="stars">
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                                <i class="fas fa-star"></i>
                                                            </div>
                                                            <span>(4.8)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="price-cell">
                                                <span class="price">@item.UnitPrice.ToString("C0")</span>
                                            </td>
                                            <td class="quantity-cell">
                                                <div class="quantity-controls">
                                                    <a href="@Url.Action("UpdateQuantity", new { id = item.ProductId, delta = -1 })"
                                                       class="qty-btn minus"
                                                       title="Decrease quantity">
                                                        <i class="fas fa-minus"></i>
                                                    </a>
                                                    <span class="qty-display">@item.Quantity</span>
                                                    <a href="@Url.Action("UpdateQuantity", new { id = item.ProductId, delta = 1 })"
                                                       class="qty-btn plus"
                                                       title="Increase quantity">
                                                        <i class="fas fa-plus"></i>
                                                    </a>
                                                </div>
                                            </td>
                                            <td class="total-cell">
                                                <span class="total-price">@subTotal.ToString("C0")</span>
                                            </td>
                                            <td class="action-cell">
                                                <a href="@Url.Action("Remove", new { id = item.ProductId })"
                                                   class="remove-btn"
                                                   title="Remove item"
                                                   onclick="return confirm('Are you sure you want to remove this item?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Cart Actions -->
                        <div class="cart-actions">
                            <a href="@Url.Action("Index", "Product")" class="btn-secondary">
                                <i class="fas fa-arrow-left"></i>
                                Continue Shopping
                            </a>

                            <button type="button" class="btn-clear" onclick="clearCart()">
                                <i class="fas fa-trash"></i>
                                Clear Cart
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Cart Summary -->
                <div class="col-lg-4">
                    <div class="cart-summary">
                        <div class="summary-header">
                            <h3>Order Summary</h3>
                        </div>

                        <div class="summary-content">
                            <div class="summary-row">
                                <span class="label">Subtotal (@Model.Count() items)</span>
                                <span class="value">@grandTotal.ToString("C0")</span>
                            </div>

                            <div class="summary-row">
                                <span class="label">Shipping</span>
                                <span class="value free">Free</span>
                            </div>

                            <div class="summary-row">
                                <span class="label">Tax</span>
                                <span class="value">@((grandTotal * 0.1m).ToString("C0"))</span>
                            </div>

                            <div class="summary-divider"></div>

                            <div class="summary-row total-row">
                                <span class="label">Total</span>
                                <span class="value">@((grandTotal * 1.1m).ToString("C0"))</span>
                            </div>
                        </div>

                        <div class="summary-actions">
                            <a href="@Url.Action("Checkout", "Order")" class="btn-checkout">
                                <i class="fas fa-credit-card"></i>
                                Proceed to Checkout
                            </a>

                            <div class="payment-methods">
                                <span>We accept:</span>
                                <div class="payment-icons">
                                    <i class="fab fa-cc-visa"></i>
                                    <i class="fab fa-cc-mastercard"></i>
                                    <i class="fab fa-cc-paypal"></i>
                                    <i class="fab fa-cc-apple-pay"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Promo Code -->
                        <div class="promo-section">
                            <h4>Have a promo code?</h4>
                            <div class="promo-form">
                                <input type="text" placeholder="Enter promo code" class="promo-input">
                                <button type="button" class="btn-apply">Apply</button>
                            </div>
                        </div>

                        <!-- Security Badge -->
                        <div class="security-badge">
                            <i class="fas fa-shield-alt"></i>
                            <div>
                                <strong>Secure Checkout</strong>
                                <span>SSL encrypted payment</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recommended Products -->
            <div class="recommended-section">
                <h3 class="section-title">You might also like</h3>
                <div class="recommended-products">
                    <!-- Placeholder for recommended products -->
                    <div class="recommended-item">
                        <div class="product-image">
                            <img src="/placeholder.svg?height=150&width=150" alt="Product">
                        </div>
                        <div class="product-info">
                            <h4>Related Product 1</h4>
                            <div class="price">$99.99</div>
                            <button class="btn-add-quick">Quick Add</button>
                        </div>
                    </div>

                    <div class="recommended-item">
                        <div class="product-image">
                            <img src="/placeholder.svg?height=150&width=150" alt="Product">
                        </div>
                        <div class="product-info">
                            <h4>Related Product 2</h4>
                            <div class="price">$149.99</div>
                            <button class="btn-add-quick">Quick Add</button>
                        </div>
                    </div>

                    <div class="recommended-item">
                        <div class="product-image">
                            <img src="/placeholder.svg?height=150&width=150" alt="Product">
                        </div>
                        <div class="product-info">
                            <h4>Related Product 3</h4>
                            <div class="price">$79.99</div>
                            <button class="btn-add-quick">Quick Add</button>
                        </div>
                    </div>

                    <div class="recommended-item">
                        <div class="product-image">
                            <img src="/placeholder.svg?height=150&width=150" alt="Product">
                        </div>
                        <div class="product-info">
                            <h4>Related Product 4</h4>
                            <div class="price">$199.99</div>
                            <button class="btn-add-quick">Quick Add</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function clearCart() {
            if (confirm('Are you sure you want to clear your entire cart?')) {
                // Implement clear cart functionality
                window.location.href = '@Url.Action("Clear", "Cart")';
            }
        }

        // Quantity update with AJAX (optional enhancement)
        $('.qty-btn').click(function(e) {
            e.preventDefault();
            const url = $(this).attr('href');

            // Add loading state
            $(this).addClass('loading');

            // You can implement AJAX update here
            window.location.href = url;
        });

        // Promo code functionality
        $('.btn-apply').click(function() {
            const promoCode = $('.promo-input').val();
            if (promoCode.trim() === '') {
                alert('Please enter a promo code');
                return;
            }

            // Implement promo code logic
            alert('Promo code functionality would be implemented here');
        });

        // Quick add functionality for recommended products
        $('.btn-add-quick').click(function() {
            $(this).text('Adding...').prop('disabled', true);

            setTimeout(() => {
                $(this).text('Added!').removeClass('btn-add-quick').addClass('btn-added');
                setTimeout(() => {
                    $(this).text('Quick Add').removeClass('btn-added').addClass('btn-add-quick').prop('disabled', false);
                }, 2000);
            }, 1000);
        });

        // Auto-save cart (optional)
        let cartTimer;
        function saveCart() {
            clearTimeout(cartTimer);
            cartTimer = setTimeout(() => {
                // Implement auto-save functionality
                console.log('Cart auto-saved');
            }, 2000);
        }

        // Initialize tooltips
        $(function () {
            $('[title]').tooltip();
        });
    </script>
}
