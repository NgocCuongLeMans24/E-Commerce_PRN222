@model DAL_Group4_E_Commerce.Models.Product
@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/">Home</a>
                <a class="breadcrumb-item text-dark" href="@Url.Action("Index", "Product")">Shop</a>
                <span class="breadcrumb-item active">Shop Detail</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <img class="w-100 h-100" src="@Model.Image" alt="@Model.ProductName" />
        </div>
        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.ProductName</h3>
                <div class="d-flex mb-3">
                    <div class="text-primary mr-2">
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star-half-alt"></small>
                        <small class="far fa-star"></small>
                    </div>
                    <small class="pt-1">(@Model.Views Reviews)</small>
                </div>
                <h3 class="font-weight-semi-bold mb-4">@Model.UnitPrice?.ToString("C0")</h3>
                <p class="mb-4">@Model.Description</p>
                <div class="d-flex align-items-center mb-4 pt-2">
                    <button class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add To Cart</button>
                </div>
                <div class="d-flex pt-2">
                    <strong class="text-dark mr-2">Share on:</strong>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="text-dark px-2" href=""><i class="fab fa-twitter"></i></a>
                        <a class="text-dark px-2" href=""><i class="fab fa-linkedin-in"></i></a>
                        <a class="text-dark px-2" href=""><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->

<!-- Related Products Start -->
@if (ViewBag.Related != null && ((IEnumerable<DAL_Group4_E_Commerce.Models.Product>)ViewBag.Related).Any())
{
    <div class="container-fluid pb-5">
        <h4>Sản phẩm cùng loại</h4>
        <div class="row px-xl-5">
            @foreach (var product in (IEnumerable<DAL_Group4_E_Commerce.Models.Product>)ViewBag.Related)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@product.Image" alt="@product.ProductName">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href="@Url.Action("Detail", "Product", new { id = product.ProductId })"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="@Url.Action("Detail", "Product", new { id = product.ProductId })">@product.ProductName</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@(product.UnitPrice?.ToString("C0") ?? "")</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<!-- Related Products End -->

<!-- Same Supplier Products Start -->
@if (ViewBag.SameSupplier != null && ((IEnumerable<DAL_Group4_E_Commerce.Models.Product>)ViewBag.SameSupplier).Any())
{
    <div class="container-fluid pb-5">
        <h4>Sản phẩm cùng nhà cung cấp</h4>
        <div class="row px-xl-5">
            @foreach (var product in (IEnumerable<DAL_Group4_E_Commerce.Models.Product>)ViewBag.SameSupplier)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@product.Image" alt="@product.ProductName">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href="@Url.Action("Detail", "Product", new { id = product.ProductId })"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="@Url.Action("Detail", "Product", new { id = product.ProductId })">@product.ProductName</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@(product.UnitPrice?.ToString("C0") ?? "")</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
<!-- Same Supplier Products End -->