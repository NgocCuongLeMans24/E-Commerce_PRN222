@model DAL_Group4_E_Commerce.Models.Product
@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-detail.css" />
}

<!-- Breadcrumb -->
<div class="breadcrumb-section">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Home</a></li>
                <li class="breadcrumb-item"><a href="/Product">Products</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.ProductName</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Product Detail Section -->
<div class="product-detail-section">
    <div class="container">
        <div class="row">
            <!-- Product Images -->
            <div class="col-lg-6">
                <div class="product-images">
                    <div class="main-image">
                        <img src="@Model.Image" alt="@Model.ProductName" id="mainImage">
                        @if (Model.Discount > 0)
                        {
                            <div class="discount-badge">
                                <span>-@Model.Discount% OFF</span>
                            </div>
                        }
                    </div>

                    <!-- Thumbnail images (placeholder for now) -->
                    <div class="thumbnail-images">
                        <div class="thumbnail active">
                            <img src="@Model.Image" alt="@Model.ProductName">
                        </div>
                        <div class="thumbnail">
                            <img src="@Model.Image" alt="@Model.ProductName">
                        </div>
                        <div class="thumbnail">
                            <img src="@Model.Image" alt="@Model.ProductName">
                        </div>
                        <div class="thumbnail">
                            <img src="@Model.Image" alt="@Model.ProductName">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-lg-6">
                <div class="product-info">
                    <div class="product-category">
                        @(Model.Category?.CategoryName ?? "Electronics")
                    </div>

                    <h1 class="product-title">@Model.ProductName</h1>

                    <div class="product-rating">
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <span class="rating-text">(4.8 out of 5)</span>
                        <span class="review-count">@Model.Views reviews</span>
                    </div>

                    <div class="product-price">
                        @if (Model.Discount > 0)
                        {
                            <span class="current-price">@((Model.UnitPrice * (1 - Model.Discount / 100.0))?.ToString("C0"))</span>
                            <span class="original-price">@Model.UnitPrice?.ToString("C0")</span>
                            <span class="savings">You save @((Model.UnitPrice * Model.Discount / 100.0)?.ToString("C0"))</span>
                        }
                        else
                        {
                            <span class="current-price">@Model.UnitPrice?.ToString("C0")</span>
                        }
                    </div>

                    <div class="product-brand">
                        <i class="fas fa-building"></i>
                        <span>Brand: <strong>@(Model.Supplier?.CompanyName ?? "Premium Brand")</strong></span>
                    </div>

                    <div class="product-availability">
                        <i class="fas fa-check-circle text-success"></i>
                        <span class="text-success">In Stock</span>
                    </div>

                    <!-- Add to Cart Form -->
                    <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.ProductId" method="post" class="add-to-cart-section">
                        <div class="quantity-selector">
                            <label>Quantity:</label>
                            <div class="quantity-controls">
                                <button type="button" class="qty-btn minus">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input type="number" name="quantity" value="1" min="1" max="10" class="qty-input">
                                <button type="button" class="qty-btn plus">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>

                        <div class="action-buttons">
                            <button type="submit" class="btn-add-cart">
                                <i class="fas fa-shopping-cart"></i>
                                Add to Cart
                            </button>

                            <button type="button" class="btn-wishlist wishlist-btn-detail" data-product-id="@Model.ProductId">
                                <i class="fas fa-heart"></i>
                                Add to Wishlist
                            </button>
                        </div>
                    </form>

                    <!-- Product Features -->
                    <div class="product-features">
                        <div class="feature">
                            <i class="fas fa-truck"></i>
                            <div>
                                <strong>Free Shipping</strong>
                                <span>On orders over $50</span>
                            </div>
                        </div>
                        <div class="feature">
                            <i class="fas fa-undo"></i>
                            <div>
                                <strong>30-Day Returns</strong>
                                <span>Easy return policy</span>
                            </div>
                        </div>
                        <div class="feature">
                            <i class="fas fa-shield-alt"></i>
                            <div>
                                <strong>2 Year Warranty</strong>
                                <span>Manufacturer warranty</span>
                            </div>
                        </div>
                    </div>

                    <!-- Social Share -->
                    <div class="social-share">
                        <span>Share:</span>
                        <a href="#" class="social-btn facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-btn twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-btn pinterest"><i class="fab fa-pinterest"></i></a>
                        <a href="#" class="social-btn whatsapp"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Description Tabs -->
        <div class="product-tabs">
            <ul class="tab-nav">
                <li class="tab-item active">
                    <a href="#description" class="tab-link">Description</a>
                </li>
                <li class="tab-item">
                    <a href="#specifications" class="tab-link">Specifications</a>
                </li>
                <li class="tab-item">
                    <a href="#reviews" class="tab-link">Reviews (@Model.Views)</a>
                </li>
            </ul>

            <div class="tab-content">
                <div id="description" class="tab-pane active">
                    <div class="description-content">
                        <h3>Product Description</h3>
                        <p>@Model.Description</p>

                        <div class="description-features">
                            <h4>Key Features:</h4>
                            <ul>
                                <li>High-quality materials and construction</li>
                                <li>Advanced technology for superior performance</li>
                                <li>Ergonomic design for comfort and usability</li>
                                <li>Energy efficient and environmentally friendly</li>
                                <li>Compatible with multiple devices and systems</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div id="specifications" class="tab-pane">
                    <div class="specifications-content">
                        <h3>Technical Specifications</h3>
                        <table class="spec-table">
                            <tr>
                                <td>Brand</td>
                                <td>@(Model.Supplier?.CompanyName ?? "Premium Brand")</td>
                            </tr>
                            <tr>
                                <td>Category</td>
                                <td>@(Model.Category?.CategoryName ?? "Electronics")</td>
                            </tr>
                            <tr>
                                <td>Model</td>
                                <td>@Model.ProductName</td>
                            </tr>
                            <tr>
                                <td>Warranty</td>
                                <td>2 Years Manufacturer Warranty</td>
                            </tr>
                            <tr>
                                <td>Dimensions</td>
                                <td>Standard Size</td>
                            </tr>
                            <tr>
                                <td>Weight</td>
                                <td>Lightweight Design</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div id="reviews" class="tab-pane">
                    <div class="reviews-content">
                        <h3>Customer Reviews</h3>
                        <div class="reviews-summary">
                            <div class="rating-overview">
                                <div class="average-rating">
                                    <span class="rating-number">4.8</span>
                                    <div class="stars">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <span class="total-reviews">Based on @Model.Views reviews</span>
                                </div>
                            </div>
                        </div>

                        <div class="review-item">
                            <div class="reviewer-info">
                                <div class="reviewer-avatar">JD</div>
                                <div class="reviewer-details">
                                    <h4>John Doe</h4>
                                    <div class="review-rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <span class="review-date">2 days ago</span>
                                </div>
                            </div>
                            <div class="review-content">
                                <p>Excellent product! Great quality and fast delivery. Highly recommended!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Related Products -->
@if (ViewBag.Related != null && ((IEnumerable<DAL_Group4_E_Commerce.Models.Product>)ViewBag.Related).Any())
{
    <div class="related-products-section">
        <div class="container">
            <h2 class="section-title">Related Products</h2>
            <div class="products-slider">
                @foreach (var product in (IEnumerable<DAL_Group4_E_Commerce.Models.Product>)ViewBag.Related)
                {
                    <div class="product-card-small">
                        <div class="product-image">
                            <img src="@product.Image" alt="@product.ProductName">
                            @if (product.Discount > 0)
                            {
                                <div class="discount-badge">-@product.Discount%</div>
                            }
                        </div>
                        <div class="product-info">
                            <h4><a href="@Url.Action("Detail", "Product", new { id = product.ProductId })">@product.ProductName</a></h4>
                            <div class="price">
                                @if (product.Discount > 0)
                                {
                                    <span class="current">@((product.UnitPrice * (1 - product.Discount / 100.0))?.ToString("C0"))</span>
                                    <span class="original">@product.UnitPrice?.ToString("C0")</span>
                                }
                                else
                                {
                                    <span class="current">@product.UnitPrice?.ToString("C0")</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/product-detail.js"></script>
    <script>
        // Quantity controls
        $(document).on('click', '.qty-btn', function() {
            const isPlus = $(this).hasClass('plus');
            const input = $(this).siblings('.qty-input');
            let value = parseInt(input.val()) || 1;

            if (isPlus) {
                value = Math.min(value + 1, 10);
            } else {
                value = Math.max(value - 1, 1);
            }

            input.val(value);
        });

        // Tab functionality
        $('.tab-link').click(function(e) {
            e.preventDefault();
            const target = $(this).attr('href');

            $('.tab-item').removeClass('active');
            $('.tab-pane').removeClass('active');

            $(this).parent().addClass('active');
            $(target).addClass('active');
        });

        // Thumbnail images
        $('.thumbnail img').click(function() {
            $('.thumbnail').removeClass('active');
            $(this).parent().addClass('active');
            $('#mainImage').attr('src', $(this).attr('src'));
        });

        // Wishlist functionality
        function getWishlist() {
            return JSON.parse(localStorage.getItem('wishlist') || '[]');
        }

        function setWishlist(arr) {
            localStorage.setItem('wishlist', JSON.stringify(arr));
        }

        function updateWishlistDetail() {
            var wishlist = getWishlist();
            var pid = parseInt($('.wishlist-btn-detail').data('product-id'));

            if (wishlist.includes(pid)) {
                $('.wishlist-btn-detail').addClass('active').find('i').removeClass('far').addClass('fas');
            } else {
                $('.wishlist-btn-detail').removeClass('active').find('i').removeClass('fas').addClass('far');
            }
        }

        $(document).ready(function() {
            updateWishlistDetail();

            $('.wishlist-btn-detail').click(function(e) {
                e.preventDefault();
                var pid = parseInt($(this).data('product-id'));
                var wishlist = getWishlist();

                if (wishlist.includes(pid)) {
                    wishlist = wishlist.filter(x => x !== pid);
                } else {
                    wishlist.push(pid);
                }

                setWishlist(wishlist);
                updateWishlistDetail();
            });
        });
    </script>
}
