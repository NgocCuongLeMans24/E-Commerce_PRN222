<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Group4 E-Commerce</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { font-family: 'Roboto', Arial, sans-serif; background: #f8f9fa; }
        .navbar-brand { font-weight: bold; font-size: 1.5rem; color: #007bff !important; }
        .navbar { box-shadow: 0 2px 8px rgba(0,0,0,0.04); }
        .footer-main { background: #222; color: #fff; padding: 2rem 0; }
        .footer-main a { color: #ffc107; }
        .footer-main .fa { margin-right: 0.5em; }
        .footer-main .social-icons a { color: #fff; margin: 0 0.5em; font-size: 1.2em; }
        .footer-main .social-icons a:hover { color: #ffc107; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-bolt text-danger"></i> Group4 E-Shop
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home Page</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Product">Product</a></li>
                        <li class="nav-item"><a class="nav-link" href="/">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="/">About us</a></li>
                    </ul>
                    <div class="d-flex align-items-center">
                        @await Component.InvokeAsync("Cart")
                    </div>
                    <a href="@Url.Action("Index", "Profile")" class="btn px-0 ml-3">
                            <i class="fas fa-user text-primary"></i>
                        </a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                            <button type="submit" class="btn px-0 ml-3" title="Logout">
                                <i class="fas fa-sign-out-alt text-primary"></i>
                            </button>
                        </form>
                    }
                    @if (User.Identity?.IsAuthenticated == false)
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn px-0 ml-3" title="Login">
                            <i class="fas fa-sign-in-alt text-primary"></i>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer-main mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5>Group4 E-Commerce</h5>
                    <p>Address: Hoa Lac - Thach That, Ha Noi<br />
                    Email: <a href="mailto:support@group4shop.com">support@group4shop.com</a><br />
                    Điện thoại: 0123 456 789</p>
                </div>
                <div class="col-md-6 text-md-right">
                    <h5>Kết nối với chúng tôi</h5>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                    <div class="mt-3">&copy; 2025 Group4 E-Commerce</div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

