@model ViewModels.OrderManagementViewModel

@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📦 Order Management</h2>
    </div>
    <form method="get" class="mb-3">
        <div class="input-group">
            <input name="search" value="@Model.SearchQuery" class="form-control" placeholder="Search orders by ID, customer, phone..." />
            <button type="submit" class="btn btn-primary">🔍 Search</button>
        </div>
    </form>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Order Date</th>
                <th>Required</th>
                <th>Shipped</th>
                <th>Shipping</th>
                <th>Payment</th>
                <th>Total Freight</th>
                <th>Status</th>
                <th>Assigned Employee</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>
                        <strong>@order.CustomerName</strong><br />
                        <small class="text-muted">@order.CustomerId</small>
                    </td>
                    <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                    <td>@order.RequiredDate?.ToString("dd/MM/yyyy")</td>
                    <td>@order.ShippedDate?.ToString("dd/MM/yyyy")</td>
                    <td>@order.ShippingMethod</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.Freight?.ToString("C")</td>
                    <td>
                        <span class="badge bg-info text-dark">
                            @(order.Status?.StatusName ?? "Pending")
                        </span>
                    </td>

                    <td>
                        @(order.Employee?.FullName ?? "N/A")
                    </td>
                    <td>
                        @(order.PhoneNumber ?? "N/A")
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
